{% extends 'IlcfranceWorldspeakAdminFrontBundle::layout.html.twig' %} {%block breadcrumb%}
<ol class="breadcrumb">
  <li><a href="{{path('Admin__default_homepage')}}">{{icon('home')}} &nbsp; {{'breadcrumb.homepage'|trans}}</a></li>
  <li><a href="{{path('Admin__company_list')}}"><i class="fa fa-umbrella"></i> &nbsp; {{'breadcrumb.company.list'|trans}}</a></li>
  <li class="active"><a href="{{path('Admin__company_add_get')}}">{{icon('plus')}} &nbsp; {{'breadcrumb.company.add'|trans}}</a></li>
</ol>
{%endblock breadcrumb%}
{%block pagebody_content%}
<div class="row">
  <div class="col-lg-12">
    <div class="well text-right">
        <form action="{{ path('Admin__company_search') }}" method="get"  class="form-search form-inline">
            <div class="form-group">
	            <label for="q">{{'_search'|trans}}</label>
	            <input class="input-sm" type="text" id="q" name="q" placeholder="{{'_keywords'|trans}}" value="" >
	        </div>
	        <div class="form-group">
	            <button class="btn btn-sm btn-primary" type="submit">{{icon('search')}}</button>
	        </div>
        </form>
    </div>
    <div class="panel panel-primary">
      <div class="panel-body">
        {{form_start(companyAddForm, {'method':'POST', 'action': path('Admin__company_add_post'), 'style': 'horizontal'})}}
          {{form_row(companyAddForm.name, {'label_col': 3, 'widget_col': 3})}}
          {{form_row(companyAddForm.prefix, {'label_col': 3, 'widget_col': 2})}}
          {{form_row(companyAddForm.service, {'label_col': 3, 'widget_col': 3})}}
          {{form_row(companyAddForm.address, {'label_col': 3, 'widget_col': 5})}}
          {{form_row(companyAddForm.town, {'label_col': 3, 'widget_col': 3})}}
          {{form_row(companyAddForm.postalCode, {'label_col': 3, 'widget_col': 3})}}
          {{form_row(companyAddForm.country, {'label_col': 3, 'widget_col': 3, 'input_group': { 'append': icon('flag') }})}}
          <div class="form-group"><div class="col-lg-offset-3 col-lg-2"><button class="btn-primary btn" type="submit">{{'_action.btnAdd'|trans|raw}}</button></div></div>
        {{form_end(companyAddForm)}}
      </div>
    </div>
  </div>
</div>
{%endblock pagebody_content%}